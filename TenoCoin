<script>
let balance = Number(localStorage.getItem("teno")) || 0;
let speed = 1;
let fan = document.getElementById("fan");

// coin update
setInterval(() => {
  balance += 0.00001 * speed; // tezlik bilan balans oshadi
  document.getElementById("bal").innerText = balance.toFixed(6);
  localStorage.setItem("teno", balance);
}, 1000);

// fan ustiga bossa
fan.addEventListener("mousedown", () => {
  fan.style.transform += " translateZ(-20px)"; // ichkariga kirgandek
  speed = 5; // tezlashadi
  fan.style.animationDuration = (2.5/speed) + "s";
});
fan.addEventListener("mouseup", () => {
  fan.style.transform = fan.style.transform.replace(" translateZ(-20px)","");
  speed = 1; // sekinlashadi
  fan.style.animationDuration = (2.5/speed) + "s";
});

// Claim / Boost
document.getElementById("claim").onclick = () => alert("Claimed!");
document.getElementById("boost").onclick = () => alert("Boost coming soon ðŸš€");

// Update GH/s display
setInterval(()=> {
  document.getElementById("speed").innerText = speed;
},100);
</script>

